<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>io.bdrc</groupId>
    <artifactId>iiif-presentation</artifactId>
    <packaging>war</packaging>
    <version>0.1.0-SNAPSHOT</version>
    <name>iiif-presentation</name>
    <description>BUDA IIIF Presentation API generation</description>
    <url>https://github.com/BuddhistDigitalResourceCenter/buda-iiif-presentation</url>
    <scm>
        <connection>scm:git:git://github.com/BuddhistDigitalResourceCenter/buda-iiif-presentation.git</connection>
        <developerConnection>scm:git:ssh://github.com:BuddhistDigitalResourceCenter/buda-iiif-presentation.git</developerConnection>
        <url>http://github.com/BuddhistDigitalResourceCenter/auth-api/tree/master</url>
    </scm>
    <licenses>
        <license>
            <name>The Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>
    <developers>
        <developer>
            <name>Elie Roux</name>
            <email>elieroux@tbrc.org</email>
            <organization>Buddhist Digital Resource Center</organization>
            <organizationUrl>https://tbrc.org</organizationUrl>
        </developer>
    </developers>
    <build>
        <finalName>buda-iiif-presentation</finalName>
        <plugins>
	        <plugin>
		        <groupId>org.springframework.boot</groupId>
		        <artifactId>spring-boot-maven-plugin</artifactId>
		        <configuration>
		          <mainClass>io.bdrc.iiif.presentation.SpringBootIIIFPres</mainClass>
		          <classifier>exec</classifier>
		        </configuration>
		        <executions>
		          <execution>
		            <goals>
		              <goal>repackage</goal>
		            </goals>
		          </execution>
		        </executions>
	        </plugin>      
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>                
                <configuration>
                  <useSystemClassLoader>false</useSystemClassLoader>
                </configuration>
            </plugin>
            <plugin>
		        <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-compiler-plugin</artifactId>
		        <configuration>
		          <showDeprecation>true</showDeprecation>
		          <encoding>${project.build.sourceEncoding}</encoding>
		          <source>${maven.compiler.source}</source>
		          <target>${maven.compiler.target}</target>
		        </configuration>
	        </plugin>           
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>                
                <configuration>
                    <filteringDeploymentDescriptors>true</filteringDeploymentDescriptors>
                    <webXml>src/main/webapp/WEB-INF/web.xml</webXml>
                    <webResources>
                        <resource>
                            <directory>src/main/webapp</directory>
                            <filtering>true</filtering>
                        </resource>
                        <resource>
                            <directory>src/main/resources</directory>
                        </resource>
                    </webResources>
                </configuration>
             </plugin>
        </plugins>
    </build>
    <parent>
	    <groupId>org.springframework.boot</groupId>
	    <artifactId>spring-boot-starter-parent</artifactId>
	    <!-- version should be the same as version.spring-boot, and the same
	         as the version indicated in hymir's pom -->
